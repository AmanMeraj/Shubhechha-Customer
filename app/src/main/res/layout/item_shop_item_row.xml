<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="10dp">

    <!-- Product Image Container -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="110dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/subh_img2"
                android:contentDescription="Product Image"/>
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/waveOverlay"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center"
            android:layout_marginHorizontal="12dp"
            android:src="@drawable/wave_bottom"
            android:scaleType="fitXY"/>
    </FrameLayout>

    <!-- Product Name -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Miniket Rice"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="@id/imageContainer"
        app:layout_constraintStart_toEndOf="@id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Product Description -->
    <TextView
        android:id="@+id/productDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contrary to popular belief, Lorem Ipsum is not simply random text."
        android:textColor="#666666"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/productName"
        app:layout_constraintStart_toEndOf="@id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Price Container -->
    <LinearLayout
        android:layout_marginEnd="10dp"
        android:id="@+id/priceContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/quantityContainer"
        app:layout_constraintTop_toBottomOf="@id/productDescription"
        app:layout_constraintStart_toEndOf="@id/imageContainer">

        <!-- Original Price (Strikethrough) -->
        <TextView
            android:id="@+id/originalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 130.00"
            android:textColor="#999999"
            android:textSize="11sp"
            android:layout_marginEnd="8dp"/>

        <!-- Current Price -->
        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹ 95.00"
            android:textColor="#FF6B35"
            android:textSize="13sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Quantity Control Container -->
    <LinearLayout
        android:id="@+id/quantityContainer"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/productDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/priceContainer">

        <!-- Decrement Button -->
        <ImageView
            android:id="@+id/decrementButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/subh_minus"
            android:padding="5dp"
            android:background="@drawable/plus_bg"
            android:contentDescription="Decrease Quantity"/>

        <!-- Quantity Text -->
        <TextView
            android:id="@+id/quantityText"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:text="3"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Increment Button -->
        <ImageView
            android:id="@+id/incrementButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/subh_plus"
            android:padding="5dp"
            android:background="@drawable/plus_bg"
            android:contentDescription="Increase Quantity"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/quantityContainer"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>