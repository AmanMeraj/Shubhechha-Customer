<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.OrderDetailsActivity">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Peach Background -->
    <View
        android:id="@+id/peach_curve_bg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/peach_curve_bg2"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_order_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:text="Order Details"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:fontFamily="@font/inter_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>

    <!-- Fixed Success Banner -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_success_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/order_details_bg1"
        android:orientation="horizontal"
       android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:gravity="center_vertical"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/peach_curve_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/subh_checklist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Order Successfully Delivered"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:fontFamily="@font/inter_semibold"/>

    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/ll_success_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Store Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_store_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/subh_img2"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store Name"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_bold"/>

                    <TextView
                        android:id="@+id/tv_store_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Park street, Kolkata, 700002"
                        android:textColor="@color/grey"
                        android:textSize="11sp"
                        android:fontFamily="@font/inter_medium"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Grey Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="10dp"/>

            <!-- Order ID -->
            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Id : xyz45898569"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="12dp"/>

            <!-- Order Items ListView -->
            <ListView
                android:id="@+id/lv_order_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:nestedScrollingEnabled="true"
                android:layout_marginBottom="10dp"/>

            <!-- Grey Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="5dp"/>

            <!-- Bill Summary Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/bill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Bill Summary"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_bold"/>

                </LinearLayout>

                <!-- Bill Summary ListView -->
                <ListView
                    android:id="@+id/lv_bill_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:nestedScrollingEnabled="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/light_gray"
                    android:layout_marginVertical="8dp"/>

                <!-- Grand Total -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grand total"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_bold"/>

                    <TextView
                        android:id="@+id/tv_grand_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 900"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_bold"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Grey Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginVertical="10dp"/>

            <!-- User and Payment Details Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#FFF2E9"
                app:cardElevation="2dp">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_user_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cart_profile" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sanjit Sen"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/inter_bold"/>

                            <TextView
                                android:id="@+id/tv_user_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91 1234 1234 XX"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Grey Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginBottom="12dp"/>

                    <!-- Payment Method -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/card" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Method"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_extrabold"/>

                            <TextView
                                android:id="@+id/tv_payment_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paid via - Cash"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Grey Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginBottom="12dp"/>

                    <!-- Payment Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/subh_calendar" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Date"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_extrabold"/>

                            <TextView
                                android:id="@+id/tv_payment_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feb 04, 2023, 10:45 AM"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Grey Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray"
                        android:layout_marginBottom="12dp"/>

                    <!-- Delivery Address -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/subh_location"
                            android:layout_gravity="top"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delivery Address"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_extrabold"/>

                            <TextView
                                android:id="@+id/tv_delivery_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15, july, jaint nagar, binayak para, kolkata!, west bengal"
                                android:textColor="@color/grey"
                                android:textSize="12sp"
                                android:fontFamily="@font/inter_medium"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>