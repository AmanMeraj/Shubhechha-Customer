<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:clipToPadding="false"
    android:paddingBottom="20dp"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:id="@+id/relative_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Peach Curved Background at Top -->
        <View
            android:id="@+id/peach_curve_bg"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/peach_curve_bg" />

        <!-- Profile Title -->
        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="@font/inter_black" />

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:scaleType="centerCrop"
            android:src="@drawable/no_profile"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/profile_border_width"
            android:elevation="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_profile"
            android:layout_marginTop="@dimen/spacing_large" />

        <!-- User Info Section -->
        <LinearLayout
            android:id="@+id/user_info_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@id/profile_image"
            android:layout_marginTop="@dimen/spacing_normal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_extrabold" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="@dimen/spacing_tiny" />
        </LinearLayout>

        <!-- Options Section -->
        <LinearLayout
            android:id="@+id/linear_rows_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_normal"
            android:layout_below="@id/user_info_section"
            android:layout_marginTop="@dimen/spacing_small">

            <LinearLayout
                android:id="@+id/linear_my_profile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/shub_profile"
                    android:padding="4dp"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="My Profile"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/subh_next"
                    app:tint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_my_orders"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_orders"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/subh_my_orders"
                    android:padding="4dp"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="My Orders"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/subh_next"
                    app:tint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_my_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/subh_address"
                    android:padding="4dp"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="My Address"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/inter_bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/subh_next"
                    app:tint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="4dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_wallet"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/shub_wallet"
                    android:padding="4dp"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="FAQ | Terms &amp; Conditions | Privacy Policies"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/subh_next"
                    app:tint="@color/black" />

            </LinearLayout>
        </LinearLayout>

        <!-- Logout Button (Now scrollable) -->
        <RelativeLayout
            android:id="@+id/linear_logout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/bg_logout"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear_rows_main"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_large">

            <ImageView
                android:id="@+id/power_button"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_normal"
                android:src="@drawable/subh_power"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/power_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/spacing_small"
                android:text="Logout"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_extrabold"
                android:paddingEnd="@dimen/spacing_normal" />
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/linear_logout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need Help?"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text=" Call Us"
                android:textSize="14sp"
                android:textColor="#069BF1"
                android:fontFamily="@font/inter_bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:background="#80000000">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="20dp" />

        </FrameLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
