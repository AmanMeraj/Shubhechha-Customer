<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent">

    <!-- CLOSE BUTTON FLOATING ABOVE -->
    <FrameLayout
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/close_button_background"
        android:elevation="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close"
            android:tint="#FF6633"/>
    </FrameLayout>


    <!-- MAIN BOTTOM SHEET -->
    <LinearLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_curve_bg"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="70dp">

        <!-- LOGO INSIDE -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/subh_logo2"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Recharge Wallet Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recharge Wallet"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Amount Input Field -->
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Enter Your Amount"
            android:textColorHint="#999"
            android:textColor="#000"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:layout_marginBottom="20dp"/>

        <!-- Amount Buttons Grid using RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAmountButtons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Proceed Button -->
        <TextView
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Proceed"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/btn_submit"/>

    </LinearLayout>

</FrameLayout>