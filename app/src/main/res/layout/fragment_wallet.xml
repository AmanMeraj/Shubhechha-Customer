<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.ProfileFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/peach"
        app:elevation="0dp">

        <!-- Collapsing Toolbar Layout -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <!-- Expandable Header Section with Peach Background and Wallet Card -->
            <RelativeLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <View
                    android:id="@+id/curvedBackground"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    app:layout_collapseMode="pin" />

                <!-- My Wallet Title in expanded state -->
                <TextView
                    android:id="@+id/tv_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="My Wallet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large"
                    android:fontFamily="@font/inter_black"/>

                <!-- Wallet Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_wallet"
                    android:layout_marginHorizontal="20dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="30dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/wallet_bg">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/bottom_guideline"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_end="15dp" />

                        <androidx.constraintlayout.widget.Guideline
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent=".10"
                            android:id="@+id/top_guideline"
                            android:layout_height="match_parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".05"
                            android:id="@+id/start_guideline"
                            android:layout_height="match_parent"/>

                        <androidx.constraintlayout.widget.Guideline
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent=".95"
                            android:id="@+id/end_guideline"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/tv_balance"
                            android:paddingVertical="5dp"
                            android:textSize="15sp"
                            app:layout_constraintTop_toBottomOf="@+id/top_guideline"
                            app:layout_constraintStart_toEndOf="@+id/start_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_medium"
                            android:text="Balance"/>

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_balance"
                            android:textColor="@color/white"
                            app:layout_constraintStart_toEndOf="@+id/start_guideline"
                            app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                            android:layout_width="wrap_content"
                            android:textSize="25sp"
                            android:fontFamily="@font/inter_extrabold"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginTop="20dp"
                            app:layout_constraintTop_toBottomOf="@+id/tv_add"
                            android:src="@drawable/subh_wallet"
                            android:layout_width="50dp"
                            app:layout_constraintEnd_toStartOf="@+id/end_guideline"
                            app:layout_constraintBottom_toTopOf="@+id/bottom_guideline"
                            android:layout_height="50dp"
                            android:contentDescription="Wallet icon"/>

                        <TextView
                            android:id="@+id/tv_add"
                            android:background="@drawable/white_capsule_bg"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="15dp"
                            android:text="ADD"
                            android:textColor="@color/black"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="15sp"
                            app:layout_constraintTop_toBottomOf="@+id/top_guideline"
                            app:layout_constraintEnd_toStartOf="@+id/end_guideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Transaction History Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:background="@drawable/peach_curve_bg2"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <TextView
                android:id="@+id/tv_transaction_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_extrabold"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                android:text="Transaction History"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_transaction_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_below="@id/tv_transaction_history"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:clipToPadding="false"
                android:paddingBottom="50dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No transactions yet"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:background="#80000000">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="20dp" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>