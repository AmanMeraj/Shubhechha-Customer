<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <!-- Image container with FrameLayout -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/storeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/subh_img1"/>

        </com.google.android.material.card.MaterialCardView>



        <ImageView
            android:id="@+id/waveOverlay"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="bottom|center"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/wave_bottom"
            android:scaleType="fitXY"/>
    </FrameLayout>

    <!-- Store Name -->
    <TextView
        android:fontFamily="@font/inter_extrabold"
        android:id="@+id/storeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/imageContainer"
        app:layout_constraintStart_toEndOf="@id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Order ID -->
    <TextView
        android:fontFamily="@font/inter_medium"
        android:id="@+id/orderId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order Id : #254586"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/storeName"
        app:layout_constraintStart_toEndOf="@id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Order Amount -->
    <TextView
        android:fontFamily="@font/inter_medium"
        android:id="@+id/orderAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Order Amount : â‚¹ 1000"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/orderId"
        app:layout_constraintStart_toEndOf="@id/imageContainer"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date/Time with icon -->
    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/orderAmount"
        app:layout_constraintStart_toEndOf="@id/imageContainer">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/subh_calendar" />

        <TextView
            android:id="@+id/orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Jul, 2025"
            android:textColor="#999999"
            android:textSize="11sp"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <!-- Status Label at bottom left -->
    <TextView
        android:fontFamily="@font/inter_bold"
        android:id="@+id/statusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered"
        android:textColor="@color/green"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageContainer"
        app:layout_constraintTop_toBottomOf="@id/imageContainer"
        app:layout_constraintStart_toStartOf="@id/imageContainer"/>

    <!-- Grey separator at bottom -->
    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/statusLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>